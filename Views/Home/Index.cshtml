    <div class="row">
        <div class="card">
            <div class="card-header">
                <div id="agregar" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">AGREGAR</div>
            </div>
            <div class="card-body">
                <table id="tblproductosalfa"  class="table table-striped" >
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Categoria</th>
                            <th scope="col">EDITAR</th>
                            <th scope="col">ELIMINAR</th>
                        </tr>
                    </thead>
                    <tbody>
                       
                    </tbody>
                </table>
