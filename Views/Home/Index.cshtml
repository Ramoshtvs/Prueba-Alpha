<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script>

    $(document).ready(function () {
        getDatos();
        getDatosCategorias();
        }
    );
    
    $(document).on("click", "button[id^='tbnEliminar_']", function () {
        let fila = $(this).closest("tr");

        let id = fila.find("td:eq(0)").text();



        var varliminarProducto = {
            id: id
        };


        $.ajax({
            type: "POST",
            url: '@Url.Action("EliminarProducto")', 
            data: JSON.stringify(varliminarProducto),
            dataType: "Json",
            contentType: "application/json; charset=utf-8",
            success: function (Respomse) {
                if (Respomse != null) {

                    if (Respomse.eliminarProducto > 0) {
                        alert("Se Elimino correctamente");
                        getDatos();
                    }

                }
                else {
                    console.log("Mando: " + Respomse);
                }
            }
        })





    })


    $(document).on("click", "button[id ^= 'tbnEditar_']", function () {
        let fila = $(this).closest("tr");

        let id = fila.find("td:eq(0)").text();
        let producto = fila.find("td:eq(1)").text();
        let marca = fila.find("td:eq(2)").text();


        $('#nombrenewproductoeditar').val(producto);
        $('#idEditarproducto').val(id);

       
        let modal = new bootstrap.Modal(document.getElementById("exampleModaleditar"));
        modal.show();

        //alert("los datos son::" + id +""+ producto +""+ marca);
    });


    function getDatos(){
        $.ajax({
            type:"POST",
            url: '@Url.Action("getProductos")',
            dataType: "Json",
            contentType:"application/json; charset=utf-8",
            success: function (Respomse) {
                if (Respomse != null) {

                    var items = Respomse.lstProduct;

                    $('#tblproductosalfa > tbody').empty();


                    //ciclo para el llenado de la tabla
                    $.each(items, function (index, value) {

                        var idbotonED = "tbnEditar_" + value.id_Producto;
                        var idbotonE = "tbnEliminar_" + value.id_Producto;
                        var botonEditar = "<button type='button' class='btn btn-warning' id = '" + idbotonED + "'>EDITAR</button>";
                        var botonEliminar = "<button type='button' class='btn btn-danger' id = '" + idbotonE + "'>ELIMINAR</button>";

                        $('#tblproductosalfa').append(
                            "<tr>"
                            + "<td>" + value.id_Producto + "</td>"
                            + "<td>" + value.name + "</td>"
                            + "<td>" + value.categoria + "</td>"
                            + "<td> " + botonEditar + "</td>"
                            + "<td>" + botonEliminar + "</td>"
                            + "</tr>"
                        );

                    });
                }
                else {
                    console.log("Mando: " + Respomse);
                }
            }
        })
    }

    function getDatosCategorias() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("getCategorias")',
            dataType: "Json",
            contentType: "application/json; charset=utf-8",
            success: function (Respomse) {
                if (Respomse != null) {

                   

                    if (Respomse.lstCategorias.length > 0) {

                        var selectCategoria = document.getElementById("CategoriaProducto");
                        var selectCategoriaeditar = document.getElementById("CategoriaProductoeditar");

                        Respomse.lstCategorias.forEach(function (nombre, index) {
                            var opcion = document.createElement("option");
                            opcion.value = nombre.name;
                            opcion.text = nombre.name;
                            selectCategoria.appendChild(opcion);

                        });
                        selectCategoria.selectedIndex = 0;


                        Respomse.lstCategorias.forEach(function (nombre, index) {
                            var opcion = document.createElement("option");
                            opcion.value = nombre.name;
                            opcion.text = nombre.name;
                            selectCategoriaeditar.appendChild(opcion);

                        });
                        selectCategoriaeditar.selectedIndex = 0;
                    }

                  
                              
                }
                else {
                    console.log("Mando: " + Respomse);
                }
            }
        })
    }
    function Agregar() {

        const selCategoria = document.getElementById('CategoriaProducto');
        const valorCategoria = selCategoria.value;

        var nuevoproducto = {
            nombre: $('#nombrenewproducto').val(),
            categoria: valorCategoria

        };


        $.ajax({
            type: "POST",
            url: '@Url.Action("AgregarProducto")',
            data: JSON.stringify(nuevoproducto),
            dataType: "Json",
            contentType: "application/json; charset=utf-8",
            success: function (Respomse) {
                if (Respomse != null) {

                    if (Respomse.insertproducto > 0) {
                        alert("Se agrego correctamente");
                        getDatos();


                    }
          
                }
                else {
                    console.log("Mando: " + Respomse);
                }
            }
        })
    }


    function Editar() {

        const selCategoria = document.getElementById('CategoriaProductoeditar');
        const valorCategoria = selCategoria.value;

        if (valorCategoria == "Seleccionar") {
            alert("debes seleccionar una categoria valida");
        
        }else{

            var EditarProducto = {
                id: $('#idEditarproducto').val(),
                nombre: $('#nombrenewproductoeditar').val(),
                categoria: valorCategoria
            };


            $.ajax({
                type: "POST",
                url: '@Url.Action("EditProducto")',
                data: JSON.stringify(EditarProducto),
                dataType: "Json",
                contentType: "application/json; charset=utf-8",
                success: function (Respomse) {
                    if (Respomse != null) {

                        if (Respomse.editarproducto > 0) {
                            alert("Se edito correctamente");

                            getDatos();

                            let modal = new bootstrap.Modal(document.getElementById("exampleModaleditar"));
                            modal.hide();
                        }

                    }
                    else {
                        console.log("Mando: " + Respomse);
                    }
                }
            })
        }



    }



</script>
